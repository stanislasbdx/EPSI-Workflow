    "/livres": {
      "get": {
        "summary": "Récupérer tous les livres",
        "responses": {
          "200": {
            "description": "Liste des livres récupérée avec succès"
          }
        }
      },
      "post": {
        "summary": "Créer un nouveau livre",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LivreEntity"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Livre créé avec succès"
          }
        }
      }
    },
    "/livres/{id}": {
      "get": {
        "summary": "Récupérer un livre par ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Livre récupéré avec succès"
          },
          "404": {
            "description": "Livre non trouvé"
          }
        }
      },
      "put": {
        "summary": "Mettre à jour un livre",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
