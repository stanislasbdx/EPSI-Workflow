              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Livre mis à jour avec succès"
          },
          "404": {
            "description": "Livre non trouvé"
          }
        }
      },
      "delete": {
        "summary": "Supprimer un livre",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
